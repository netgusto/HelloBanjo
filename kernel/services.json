{
    "imports": [
        "../services.json"
    ],
    "parameters": {
        "kernel.serverport": 3000
    },
    "services": {

        "app": {
            "isFunction": true,
            "class": "express"
        },

        "path": {
            "isObject": true,
            "class": "path"
        },

        "core.viewhelpers": {
            "class": "./services/CoreViewHelpers",
            "isFunction": true,
            "arguments": [
                "@kernel.handlebars",
                "@kernel.router"
            ],
            "tags": [
                { "name": "kernel.viewhelper_provider" }
            ]
        },

        "kernel.handlebars": {
            "class": "express-hbs",
            "isObject": true
        },

        "kernel.router": {
            "class": "./services/Router",
            "isFunction": true,
            "arguments": [
                "@app"
            ]
        },

        "kernel.routeloader": {
            "class": "./services/RouteLoader",
            "arguments": [
                "@service_container",
                "@app"
            ]
        },

        "kernel.viewhelperloader": {
            "class": "./services/ViewHelperLoader",
            "arguments": [
                "@service_container",
                "@kernel.handlebars"
            ]
        },

        "kernel.bootstrap": {
            "class": "./services/Bootstrap",
            "arguments": [
                "%kernel.serverport%",
                "@app",
                "@path",
                "@kernel.handlebars",
                "@kernel.router",
                "@kernel.routeloader",
                "@kernel.viewhelperloader"
            ]
        }
    }
}